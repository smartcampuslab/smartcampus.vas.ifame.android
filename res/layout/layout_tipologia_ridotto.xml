<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iDeciso_tipologia_ridotto_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".TipologiaRidotto" >

        <RelativeLayout
            android:id="@+id/container_ridotto_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/tipologia_ridotto_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:src="@drawable/ridotto_menu" />

            <TextView
                android:id="@+id/tipologia_ridotto_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipologia_ridotto_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/iDeciso_menu_ridotto_price"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_buyable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tipologia_ridotto_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="17sp" />
        </RelativeLayout>

        <!-- ridotto 1 -->

        <TextView
            android:id="@+id/tipologia_ridotto1_titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/container_ridotto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_bkg_menu" >

            <TextView
                android:id="@+id/tipologia_ridotto_primo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_contorno21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_primo1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_dessert1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_contorno21"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_pane11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tipologia_ridotto_dessert1"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!-- fine ridotto 1 -->


        <!-- ridotto 2 -->

        <TextView
            android:id="@+id/tipologia_ridotto2_titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/container_ridotto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_bkg_menu" >

            <TextView
                android:id="@+id/tipologia_ridotto_secondo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_contorno12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_secondo2"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_dessert2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_contorno12"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_pane12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tipologia_ridotto_dessert2"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!-- fine ridotto 2 -->


        <!-- ridotto 3 -->

        <TextView
            android:id="@+id/tipologia_ridotto3_titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/container_ridotto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_bkg_menu" >

            <TextView
                android:id="@+id/tipologia_ridotto_piattofreddo_pastastation_insalatona3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_contorno13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_piattofreddo_pastastation_insalatona3"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_dessert3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_contorno13"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_pane13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tipologia_ridotto_dessert3"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />
        </RelativeLayout>
        <!-- fine ridotto 3 -->


        <!-- ridotto 4 -->

        <TextView
            android:id="@+id/tipologia_ridotto4_titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/container_ridotto4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_bkg_menu" >

            <TextView
                android:id="@+id/tipologia_ridotto_pizza4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_contorno14_dessert4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_pizza4"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_ridotto_caffe4_acqua4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_ridotto_contorno14_dessert4"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp" />
        </RelativeLayout>

        <!-- fine ridotto 4 -->
    </LinearLayout>

</ScrollView>