                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_snack_pane21"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />
        </RelativeLayout>
