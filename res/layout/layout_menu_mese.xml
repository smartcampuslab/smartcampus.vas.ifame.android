<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/spinner_settimana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/iDeciso_menu_mese_settimana" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinner_settimana"
        android:scrollbars="none"
        android:padding="4dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/day_of_the_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/spinner_settimana"
                android:background="#CC0000"
                android:paddingLeft="3dp"
                android:text="day"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/menu_of_the_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/day_of_the_week"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none" >
            </ListView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>