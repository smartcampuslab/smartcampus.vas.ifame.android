<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iDeciso_tipologia_intero_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".TipologiaInero" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/tipologia_intero_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/intero_menu" />

            <TextView
                android:id="@+id/tipologia_intero_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/iDeciso_menu_intero_price"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <TextView
            android:id="@+id/tipologia_intero1_titolo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#cc0000"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/container_intero1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tipologia_intero_primo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_intero_secondo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tipologia_intero_primo"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tipologia_intero_contorno2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_intero_secondo"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_intero_dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_intero_contorno2"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tipologia_intero_pane1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tipologia_intero_dessert"
                android:layout_marginLeft="20dp"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>