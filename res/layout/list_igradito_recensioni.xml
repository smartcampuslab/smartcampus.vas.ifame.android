<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/iGradito_recensioni_nome_data_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/iGradito_recensioni_nome_utente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="#E32033"
            android:text="Nome Utente"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/iGradito_recensioni_data_inserimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E32033"
            android:gravity="right"
            android:layout_weight="1"
            android:text="17/06/13"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView android:id="@+id/iGradito_recensioni_review_content" 
        android:layout_below="@+id/iGradito_recensioni_nome_data_linear_layout"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="questa Ã¨ solo una prova di recensione, niente male"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/dislike_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iGradito_recensioni_review_content"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:text="15" />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iGradito_recensioni_review_content"
        android:paddingRight="120dp"
        android:paddingTop="10dp"
        android:text="15" />

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/like_count"
        android:layout_below="@id/iGradito_recensioni_review_content"
        android:src="@drawable/thumbs_up" />
    
     <ImageButton
        android:id="@+id/dislike_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dislike_count"
        android:layout_below="@id/iGradito_recensioni_review_content"
        android:src="@drawable/thumbs_down" />

</RelativeLayout>