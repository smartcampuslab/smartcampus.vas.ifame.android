<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget android:id="@android:id/tabs"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content">
        </TabWidget>
        <FrameLayout 
            android:id="@android:id/tabcontent"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent">
    		
    <Button 
        android:id="@+id/menu_intero_btn"
        android:showAsAction="ifRoom"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/intero_menu"
        android:layout_marginTop="100dp" />
    
    <Button 
        android:id="@+id/menu_ridotto_btn"
        android:showAsAction="ifRoom"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ridotto_menu"
        android:layout_marginTop="100dp" />
        
    <Button 
        android:id="@+id/menu_snack_btn"
        android:showAsAction="ifRoom"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/snack_menu"
        android:layout_marginTop="100dp" />
            
        </FrameLayout>
    </LinearLayout>
</TabHost>